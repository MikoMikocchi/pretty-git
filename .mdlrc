all
# MD013 Line length
rule 'MD013', :line_length => 120, :code_blocks => false, :tables => false, :headings => false
# MD033 Inline HTML allowed
exclude_rule 'MD033'
# MD024 Multiple headings with same content allowed if different nesting
rule 'MD024', :allow_different_nesting => true
# MD022 Headings should be surrounded by blank lines
rule 'MD022'
# MD003 Headings style: atx
rule 'MD003', :style => :atx
# MD004 Unordered list style: dash
rule 'MD004', :style => :dash
# MD009 Trailing spaces
rule 'MD009', :br_spaces => 0, :list_item_empty_lines => false
# MD046 Fenced code blocks
rule 'MD046'
