{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "languages",
  "type": "object",
  "required": ["report", "generated_at", "repo_path", "items", "metric"],
  "properties": {
    "report": { "const": "languages" },
    "generated_at": { "type": "string", "format": "date-time" },
    "repo_path": { "type": "string" },
    "metric": { "type": "string", "enum": ["bytes", "files", "loc"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["language", "percent"],
        "properties": {
          "language": { "type": "string" },
          "bytes": { "type": "integer" },
          "files": { "type": "integer" },
          "loc": { "type": "integer" },
          "percent": { "type": "number" },
          "color": { "type": "string" }
        }
      }
    }
  }
}
